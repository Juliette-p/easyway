<div id="carousel<%= category %>Controls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% activities.each do |activity| %>
      <%if activity == activities.first %>
        <div class="carousel-item active">
          <%= link_to activity_path(activity) do %>
            <%# <%= activity.photo.attached? ? cl_image_tag(activity.photo.key, width: 100, height: 100, crop: :fill) : image_tag("image_par_defaut.png") %>
            <% if activity.photo.attached? %>
              <%= cl_image_tag(activity.photo.key, crop: :fill, class: "carousel-item-img") %>
            <% else %>
              <%= image_tag("image_par_defaut.png", crop: :fill, class: "carousel-item-img") %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= link_to activity_path(activity) do %>
            <% if activity.photo.attached? %>
              <%= cl_image_tag(activity.photo.key, crop: :fill, class: "carousel-item-img") %>
            <% else %>
              <%= image_tag("image_par_defaut.png", crop: :fill, class: "carousel-item-img") %>
            <% end %>
            <%# <%= activity.photo.attached? ? cl_image_tag(activity.photo.key, width: 100, height: 100, crop: :fill) : image_tag("fond_gris.png") %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  
</div>
