<div id="carouselRatingsControls" class="carousel slide" data-bs-ride="carousel">
  <div class="basic-card carousel-inner"> <%# data-controller="rating-comment">%> <%# data controller "rating-comment" utilisÃ© dans la partial _rating_card%>
    <% ratings.each do |rating| %>
      <%if rating == ratings.first %>
        <div class="carousel-item active">
          <%= render "ratings/rating_card", rating: rating %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= render "ratings/rating_card", rating: rating %>
        </div>
      <% end %>
    <% end %>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselRatingsControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselRatingsControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
